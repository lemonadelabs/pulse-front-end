{{#if this.showStakeholderList}}
  {{stakeholder-list
    stakeholders=this.model.stakeholders
    toggleStakeholderList=(action 'toggleStakeholderList')
    focusOnSelectedStakeholders=(action 'focusOnSelectedStakeholders')
    focussedStakeholders=this.focussedStakeholders
  }}
{{/if}}

{{nav-bar
  toggleStakeholderList=(action 'toggleStakeholderList')
}}


{{stakeholder-modal
  selectedStakeholder=this.selectedStakeholder
  setStakeholderUndefined=(action 'userDidCloseStakeholderModal')
}}

{{stakeholder-view-mode-window
  selectedStakeholder=this.selectedStakeholder
  toggleConnections=(action 'toggleConnections')
  toggleDistribution=(action 'toggleDistribution')
  toggleHistory=(action 'toggleHistory')

}}

{{#if this.focusOnStakeholders}}
  <p>Stakeholders are filtered</p>
  <p {{action 'removeStakeholdersFilter'}}>Cancel</p>
{{/if}}


{{scatter-cube
  project=this.model
  stakeholders=this.data.stakeholders
  connections=this.connections
  selectedStakeholder=this.selectedStakeholder
  selectedTime=this.selectedTime
  focusOnStakeholders=this.focusOnStakeholders

  connectionView=this.connectionView
  distributionView=this.distributionView
  historyView=this.historyView

  updateStakeholder=(action 'userDidSelectStakeholder')
}}

{{time-series
  model=this.model
  updateTime=(action 'userDidChangeTime')
}}
